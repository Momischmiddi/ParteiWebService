@using DataAccessLibrary.Models
@model Tuple<List<Travel>, Dictionary<int, double>>
@{
    ViewData["Title"] = "_DisplayTrip";
}

@foreach (Travel travel in Model.Item1)
{
    @Html.Hidden("travelId",travel.TravelId)
    <div class="col-12 col-sm-6 col-md-6 col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title" name="@travel.Destination">@travel.Destination</h5>
            </div>
            <div id="carouselControls_trip_@(travel.TravelId)" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @foreach (var image in travel.Images)
                    {
                        <div class="carousel-item @(travel.Images.First() == image ? "active":"" )">
                            <img class="d-block w-100" src="@image.ImageUrl" alt="@travel.Destination" name="@image.ImageId">
                        </div>
                    }

                </div>
                <a class="carousel-control-prev" href="#carouselControls_trip_@(travel.TravelId)" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselControls_trip_@(travel.TravelId)" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <div class="card-body">
                <p class="card-text" name="trip_description">@travel.Description</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@(travel.EndDate.Subtract(travel.StartDate).TotalDays) Nächte (@travel.StartDate.ToString("d") - @travel.EndDate.ToString("d"))</li>
                <li class="list-group-item">
                    Kosten: @travel.Costs € p.P.
                    <div id="costProgrssbar_@travel.TravelId">
                        <div class="progress">
                            <div id="progrssbar" class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: @Model.Item2[travel.TravelId]%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">@Model.Item2[travel.TravelId] % Bezahlt</div>
                        </div>
                    </div>
                </li>
            </ul>
            <div class="card-body">
                <a href="/TripAddUser/Index?TravelId=@travel.TravelId" class="card-link">Informationen</a>
                <a href="#" class="card-link">Teilnehmen</a>
            </div>
            <div class="card-footer text-muted text-right">
                Teilnehmer:
                @(travel.TravelMembers.Count() + travel.ExternalTravelMembers.Count())
                /
                @travel.MaxTraveler
            </div>
        </div>
    </div>
}
