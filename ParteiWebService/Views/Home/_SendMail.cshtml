@using ParteiWebService.ViewModel
@model SendMailViewModel
<!-- MODAL SECTION -->
<div class="modal fade" id="sendMailModal" tabindex="-1" role="dialog" aria-labelledby="sendMailModal" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Send Mail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="SendMailToSomeOne" asp-controller="Home" method="post">

                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col">
                            <label>E-Mail Adresse:</label>
                            <input asp-for="DestinationAddress" />
                        </div>
                        <div class="form-group col">
                            <label>Name:</label>
                            <input asp-for="DestinationName" />
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Schließen</button>
                    <button type="submit" class="btn btn-primary">Send Mail</button>
                </div>
            </form>
        </div>
    </div>
</div>

