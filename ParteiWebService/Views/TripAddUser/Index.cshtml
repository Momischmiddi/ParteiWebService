@using DataAccessLibrary.Models
@model Tuple<List<Member>, List<ExternalMember>, List<TravelMember>,Travel >
@{
    ViewData["Title"] = "Index";
}

    <div class="container-fluid">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800"><i class='fas fa-suitcase'></i> @Model.Item4.Destination</h1>

            <form asp-action="TravelPdfExport">
                <button class="d-none d-sm-inline-block btn btn-primary btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-file-export"></i>
                    </span>Reiseinformationen herunterladen
                </button>
            </form>
        </div>

        @if (Model.Item1.Count > 0)
        {
            <!-- Content Row -->
            <div class="row">
                <!-- Earnings (Monthly) Card Example -->
                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Reise Info</div>

                                    <div class="h5 mb-0 font-weight-bold text-gray-800">von @Model.Item4.StartDate.ToString("d")</div>

                                    <div class="h5 mb-0 font-weight-bold text-gray-800">bis @Model.Item4.EndDate.ToString("d")</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-hotel fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Earnings (Monthly) Card Example -->
                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Gesamtskosten </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">0 / @(Model.Item4.Costs*Model.Item4.MaxTraveler) €</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Earnings (Monthly) Card Example -->
                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Teilnehmer</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        @(Model.Item4.TravelMembers.Count() + (Model.Item4.ExternalMembers.Count())) /
                                        @Model.Item4.MaxTraveler
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-users fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Content Row -->
        }







        <div class="form-group">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <div class="d-sm-flex align-items-center justify-content-between">
                        <h5 class="m-0 ">Mitglieder</h5>

                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Item1.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Vorname</th>
                                        <th>Nachname</th>
                                        <th>Postleitzahl</th>
                                        <th>Ort</th>
                                        <th>Adresse</th>
                                        <th>Alter</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Member member in Model.Item1)
                                    {
                                        <tr>
                                            <td>
                                                <button onclick='AddMemberToTrip' class="d-none d-sm-inline-block btn btn-primary btn-circle">
                                                    <span class="icon">
                                                        <i class="fas fa-user-plus"></i>
                                                    </span>
                                                </button>
                                            </td>
                                            <td>@member.PreName </td>
                                            <td>@member.LastName</td>
                                            <td>@member.PostCode</td>
                                            <td>@member.Home</td>
                                            <td>@member.Adress</td>
                                            <td>@member.DateOfBirth</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="card-footer">

                </div>
            </div>
        </div>
        <div class="form-group">

            <div class="card shadow mb-4">
                <div class="card-header">
                    <div class="d-sm-flex align-items-center justify-content-between">
                        <h5 class="m-0 ">Reisemitglieder</h5>

                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Item3.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (TravelMember travelMember in Model.Item3)
                                    {
                                        <tr>
                                            <td>
                                                <form asp-action="Delete" asp-route-id="@travelMember.ID">
                                                    <button onclick='DeleteMember("@travelMember.ID")' class="d-none d-sm-inline-block btn btn-primary btn-circle">
                                                        <span class="icon">
                                                            <i class="fas fa-user-minus"></i>
                                                        </span>
                                                    </button>
                                                </form>
                                            </td>
                                            <td>@travelMember.ID</td>
                                            <td>@travelMember.Member</td>
                                            <td>@travelMember.TargetCosts</td>
                                            <td>@travelMember.ActualCosts</td>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                </div>
                <div class="card-footer">

                </div>
            </div>

        </div>
        <div class="form-group">
            <div class="card shadow mb-4">
                <div class="card-header">
                    <div class="d-sm-flex align-items-center justify-content-between">
                        <h5 class="m-0 ">Externe Mitglieder</h5>
                        <a href="#" id="header_modal" name="addExternalMemberModal" class="d-none d-sm-inline-block btn btn-primary btn-icon-split" data-toggle="modal" data-target="#addExternalMemberModal">
                            <span class="icon text-white-50">
                                <i class="fas fa-user-plus"></i>
                            </span>
                            <span class="text">Mitglied hinzufügen</span>
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Item2.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Vorname</th>
                                        <th>Nachname</th>
                                        <th>E-Mail Adresse</th>
                                        <th>Kosten Soll</th>
                                        <th>Kosten Ist</th>
                                        <th>Zustiegspunkt</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (ExternalMember externalMember in Model.Item2)
                                    {
                                        <tr>
                                            <td>
                                                <button onclick='' class="d-none d-sm-inline-block btn btn-primary btn-circle">
                                                    <span class="icon">
                                                        <i class="fas fa-user-minus"></i>
                                                    </span>
                                                </button>
                                            </td>
                                            <td>@externalMember.PreName</td>
                                            <td>@externalMember.LastName</td>
                                            <td>@externalMember.Mail</td>
                                            <td>@externalMember.TargetCosts</td>
                                            <td>@externalMember.ActualCosts</td>
                                            <td>@externalMember.BoardingPoint</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                </div>
                <div class="card-footer">

                </div>
            </div>
        </div>
        <partial name="_AddExternalMember" model="new ExternalMember()" />

