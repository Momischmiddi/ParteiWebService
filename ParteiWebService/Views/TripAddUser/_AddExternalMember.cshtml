@model DataAccessLibrary.Models.ExternalMember
<!-- MODAL SECTION -->
<div class="modal fade" id="addExternalMemberModal" tabindex="-1" role="dialog" aria-labelledby="addExternalMemberModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Externes Mitglied hinzufügen</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form asp-action="AddExternalMember" asp-controller="TripAddUser">
                    <div class="modal-body">
                        <div class="row">
                            @Html.HiddenFor(externalMember => externalMember.ID)
                            <div class="form-group col">
                                <label asp-for="PreName"></label>
                                <input class="form-control" placeholder="Vorname eingeben" asp-for="PreName" required>
                            </div>
                            <div class="form-group col">
                                <label asp-for="LastName"></label>
                                <input class="form-control" placeholder="Nachname eingeben" asp-for="LastName" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col">
                                <label asp-for="Mail"></label>
                                <input class="form-control" placeholder="E-Mail eingeben" asp-for="Mail" required>
                            </div>
                            <div class="form-group col">
                                <label asp-for="BoardingPoint"></label>
                                <input class="form-control" placeholder="Zustiegspunkt eingeben" asp-for="BoardingPoint" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col">
                                <label asp-for="TargetCosts"></label>
                                <input class="form-control" asp-for="TargetCosts" required>
                            </div>
                            <div class="form-group col">
                                <label asp-for="ActualCosts"></label>
                                <input class="form-control" asp-for="ActualCosts" required>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Schließen</button>
                        <button type="submit" class="btn btn-primary">Speichern</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>