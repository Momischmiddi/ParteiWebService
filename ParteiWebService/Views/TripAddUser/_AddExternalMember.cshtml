@using Aufgabe_2.ViewModel
@using DataAccessLibrary.Models
@model AddExternalMemberViewModel
<!-- MODAL SECTION -->
<div class="modal fade" id="addExternalMemberModal" tabindex="-1" role="dialog" aria-labelledby="addExternalMemberLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Externes Mitglied hinzufügen</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="AddExternalMember" asp-controller="TripAddUser">
                <div class="modal-body">
                    <div class="row">
                        @Html.HiddenFor(externalMember => externalMember.ExternalMember.ID)
                        @Html.HiddenFor(travel => travel.Travel.TravelId)
                        <div class="form-group col">
                            <label asp-for="@Model.ExternalMember.PreName"></label>
                            <input class="form-control" placeholder="Vorname eingeben" asp-for="@Model.ExternalMember.PreName" required>
                        </div>
                        <div class="form-group col">
                            <label asp-for="@Model.ExternalMember.LastName"></label>
                            <input class="form-control" placeholder="Nachname eingeben" asp-for="@Model.ExternalMember.LastName" required>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col">
                            <label asp-for="@Model.ExternalMember.Mail"></label>
                            <input class="form-control" placeholder="E-Mail eingeben" asp-for="@Model.ExternalMember.Mail" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Schließen</button>
                    <button type="submit" class="btn btn-primary">Speichern</button>
                </div>
            </form>
        </div>
    </div>
</div>