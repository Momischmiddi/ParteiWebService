@model Aufgabe_2.Models.SetPasswordModel
@{
    ViewData["Title"] = "SetPassword";
}

    <form action="/Account/SetPassword" method="post" class="form-signin text-center">
        <img class="mb-4" src="~/images/geschaeft.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Setze dein Passwort</h1>
        <div asp-validation-summary="All" class="text-danger"></div>
        <input asp-for="PasswordCode" type="hidden" />
        <input asp-for="EmailConfirmationCode" type="hidden" />
        <input asp-for="UserId" type="hidden" />
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" type="password"/>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Passwort setzen</button>
    </form>