@using Microsoft.AspNetCore.Identity
@using DataAccessLibrary.Models

@inject UserManager<ApplicationUser> userManager
@{
    ViewData["Title"] = "Index";
}
@model ApplicationUserMultiselectModel
<h1>Administratoren verwalten</h1>

<div class="card shadow mb-4">
    <div class="card-header">
        <div class="d-sm-flex align-items-center justify-content-between">
            <h5 class="m-0 ">Mitgliederliste</h5>
            <a href="#" id="header_modal" name="addManager" class="d-none d-sm-inline-block btn btn-primary btn-icon-split" data-toggle="modal" data-target="#addManager">
                <span class="icon text-white-50">
                    <i class="fas fa-user-plus"></i>
                </span>
                <span class="text">Manager hinzufügen</span>
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Benutername</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var member in Model.ApplicationUsers.Where(a => a.UserRoles.Any(i => i.Role.Name.Equals("Manager"))).ToList()) 
                    {
                        <tr>
                            <td>@member.UserName</td>
                            <td>@member.Email</td>

                            <td>
                                <form asp-action="Delete" asp-route-id="@member.Id">
                                    <button onclick='DeleteMember("@member.UserName")' href="#" class="d-none d-sm-inline-block btn btn-danger btn-circle">
                                        <span class="icon">
                                            <i class="fas fa-trash-alt"></i>
                                        </span>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="addAdminModalContainer">
    <partial name="_AddManagerModal" model="Model" />
</div>

